<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
		<%= f.label :username %><br />
    <%= f.text_field :username %><br />
		<%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <%= f.submit "Sign in", :class => "submit" %>
<% end%>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
