<%= form_for @workout do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<p>
		<%= f.label :bodyweight %><br />
		<%= f.text_field :bodyweight %><br />
		<%= f.label :note %><br />
		<%= f.text_field :note %><br />
		<%= f.label :date %><br />
		<%= date_select :workout, :date %>
	</p>
	<ul>
		<li class="fields"><%= link_to_add_fields "Add Exercise", f, :exercises %></li>
	</ul>
	<p><%= f.submit "Submit" %></p>
<% end %>
